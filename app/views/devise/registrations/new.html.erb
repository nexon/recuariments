<div class="row">
	<h1>Recuariments</h1>
</div>
<div class="row">
	<div class="panel panel-default">
		<div class="panel-heading">
			Sign In
		</div>
	  <div class="panel-body">
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= f.error_notification %>
					<div class="form-group">
						<label>
							Email
						</label>
				    <%= f.input_field :email, :required => true, :autofocus => true %>
					</div>
					<div class="form-group">
						<label>
							Password
						</label>
				    <%= f.input_field :password, :required => true %>
					</div>
					<div class="form-group">
						<label>
							Password Confirmation
						</label>
						<%= f.input_field :password_confirmation, :required => true %>
					</div>
			  <div class="form-group">
			  	<%= f.button :submit, "Sign up",class:"btn btn-primary pull-right"  %>
			  </div>
			<% end %>
	  </div>
	  <div class="panel-footer"><%= render "devise/shared/links" %></div>
	</div>
</div>
