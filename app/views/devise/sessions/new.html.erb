<div class="row">
	<h1>Recuariments</h1>
</div>
<div class="row">
	<div class="panel panel-default">
		<div class="panel-heading">
			Sign In
		</div>
	  <div class="panel-body">
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<div class="form-group">
					<label>Username</label>
					<%= f.input_field :email, :required => false, :autofocus => true, class: "span12", label: false %>
				</div>
				<div class="form-group">
					<label>Password</label>
				  <%= f.input_field :password, :required => false , class: "span12", label: false%>
				</div>
			
	      <div class="form-group">
					<%= f.button :submit, "Sign in", class:"btn btn-success pull-right" %>
	      </div>	
			<% end %>
	  </div>
	  <div class="panel-footer"><%= render "devise/shared/links" %></div>
	</div>
</div>