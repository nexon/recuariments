<div class="block">
    <div class="block-header">
        <h2>Sign In</h2>
    </div>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<label>Username</label>
			<%= f.input_field :email, :required => false, :autofocus => true, class: "span12", label: false %>
			<%= link_to "Forgot your password?", new_password_path(resource_name), class:"reset-password"%>
			<label>Password</label>
		  <%= f.input_field :password, :required => false , class: "span12", label: false%>
			
      <div class="form-actions">
				<%= f.button :submit, "Log-in", class:"btn btn-success pull-right" %>
          <!--You can have a remember me or sign up here-->
					<%#= f.input_field :remember_me, label: false, class: "remember-me", :as => :boolean if devise_mapping.rememberable? %>
          <!-- <a href="sign-up.html" class="sign-up">Sign Up</a> -->
          <div class="clearfix"></div>
      </div>	
	</div>
			<% end %>
<%= render "devise/shared/links" %>
