<div class="col-md-12">
	<h2>New Requirement <small>for <%= @project.title %></small></h2>
	<% unless @project.fields.blank? %>
		<%= simple_form_for [@project,@requirement] do |f| %>
			<%= render "form", f:f %>
				<div class="form-group">
					<div class="col-md-6">
						<%= f.button :submit, "Create Requirement", class:"btn btn-primary col-md-12" %>
					</div>
					<div class="col-md-6">
						<%= link_to "Cancel", :back, class:"btn btn-default col-md-12" %>
					</div>
				</div>
		<% end %>
	<% else %>
	Create a field for a requirement first!. <%= link_to "Create one", new_project_requirement_field_path(@project) %>
	<% end %>
</div>