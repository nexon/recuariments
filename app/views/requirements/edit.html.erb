<div class="col-md-12">
	<h2>Edit Requirement <small>for <%= @project.title %></small></h2>
	<%= simple_form_for [@project,@requirement] do |f| %>
		<%= render "form", f:f %>
		<div class="form-actions">
			<div class="col-md-6">
				<%= f.button :submit, "Update requirement", class:"btn btn-primary col-md-12" %>
			</div>
			<div class="col-md-6">
				<%= link_to "Cancel", :back, class:"btn btn-default col-md-12" %>
			</div>
		</div>
	<% end %>
</div>
