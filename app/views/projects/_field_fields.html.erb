<fieldset>
	<%= link_to '#', input_html:{class: "remove_fields"}  do %>
		<i class="icon-remove-sign"></i>
	<% end %>
	<%= f.label "Type" %>
	<%= f.input_field :field_type, as: :select, collection: %w[text_field check_box] %>
	<%= f.label "Name"%>
	<%= f.input_field :name %>
	<%= f.input_field :required, label: false %> Required
	<%= f.input :_destroy, as: :hidden %>
	
</fieldset>