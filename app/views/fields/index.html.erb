<div class="row">
	<div class="page-header">
		<h2>Attributes <small><%= link_to "New Attribute", new_project_requirement_field_path(@project) %></small></h2>
	</div>
	<% if @fields.empty? %>
			<p class="text-center">
				You don't have any requirement attribute yet. <%= link_to "Create one", new_project_requirement_field_path(@project) %>
			</p>
	<% else %>
		<p><%= render "requirement_fields_list", fields: @fields %></p>
	<% end %>
</div>